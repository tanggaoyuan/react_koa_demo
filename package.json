{
  "name": "koa-ts-base-template",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Simple",
  "description": "koa ts template",
  "main": "index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register ./server/main.js",
    "dev": "cross-env NODE_ENV=development NODE_KOA_WEBPACK=true npm run server:dev",
    "build": "npm run server:build&&npm run web:build",
    "server:dev": "nodemon -e ts --exec ts-node -r tsconfig-paths/register server/main.ts",
    "server:build": "npm run rm-dist && npm run build-ts && npm run copy-static",
    "web:dev": "cross-env NODE_ENV=development webpack server --config ./webpack/webpack.dev.js",
    "web:build": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.prod.js",
    "build-ts": "tsc -b ./  --verbose",
    "copy-static": "ts-node copyStatic.ts",
    "rm-dist": "ts-node rm-dist.ts",
    "apidoc": "apidoc -i ./server/app/routes -o ./server/app/apidoc/dist -c ./server/app/apidoc",
    "lint": "eslint server test --ext .ts",
    "lint:fix": "eslint server test --ext .ts --fix",
    "prepush": "npm run lint"
  },
  "keywords": [
    "koa",
    "ts"
  ],
  "dependencies": {
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa-favicon": "^2.0.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static-server": "^1.4.0",
    "koa-views": "^6.2.1",
    "pug": "^2.0.4",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.1",
    "webpack_koa_server": "^1.0.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^24.0.19",
    "@types/koa": "2.0.50",
    "@types/koa-compose": "3.2.4",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/koa-views": "^2.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^18.7.23",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "apidoc": "^0.17.7",
    "autoprefixer": "^10.4.12",
    "babel": "^6.23.0",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^2.7.0",
    "jest": "24.1.0",
    "less-loader": "^11.0.0",
    "mini-css-extract-plugin": "^2.6.1",
    "nodemon": "^1.19.3",
    "postcss-preset-env": "^7.8.2",
    "shelljs": "^0.8.3",
    "should": "^13.2.3",
    "style-loader": "^3.3.1",
    "supertest": "^4.0.2",
    "ts-jest": "24.0.0",
    "ts-node": "~7.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "last 2 versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
